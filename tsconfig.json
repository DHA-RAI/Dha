{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "composite": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node", "vite/client", "@types/express", "@types/jest"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "importHelpers": true,
    "paths": {
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"],
      "drizzle-orm": ["./node_modules/drizzle-orm"],
      "drizzle-orm/*": ["./node_modules/drizzle-orm/*"]
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "server/**/*.js",
    "server/**/*.jsx",
    "server/**/*.d.ts",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "shared/**/*.js",
    "shared/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client/**/*",
    "**/*.test.ts",
    "**/*test*.ts",
    "**/test-*.ts",
    "**/__tests__/**"
  ]
}
